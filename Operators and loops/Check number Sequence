import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
        // Write your code here
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();

        int i=1;
        int prev=in.nextInt();
        boolean isDec =true;
        
        while(i <= n-1){
           
           int curr = in.nextInt();
            if(curr==prev){

                System.out.print("false");
                return ;
            }

            else if(curr<prev){
                if(!isDec){
                    System.out.print("false");
                    return;
                }    

            }

            else if(curr>prev){
                if(isDec){
                   isDec=false;
                }
            }
            prev = curr; //update n1 with the value of n2
           
            i=i+1;
        }
        
        System.out.println("true");

    }
}
